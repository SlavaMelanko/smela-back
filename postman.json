                  "    pm.expect(responseData).to.have.property('user').that.is.an('object');",
                  "    pm.expect(responseData.user).to.have.all.keys('id', 'firstName', 'lastName', 'email', 'role', 'status', 'createdAt', 'updatedAt');",
