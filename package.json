{
  "name": "smela-back",
  "scripts": {
    "prepare": "husky",
    "clean": "bun pm cache rm && rm -rf node_modules bun.lock",
    "reinstall": "bun clean && bun install",
    "dev": "bun --watch src/app.ts",
    "start": "NODE_ENV=production bun src/app.ts",
    "staging": "NODE_ENV=staging bun src/app.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "bun run src/db/seed.ts",
    "db:setup": "bun run db:generate && bun run db:migrate && bun run db:seed",
    "db:studio": "drizzle-kit studio",
    "test": "NODE_ENV=test bun test",
    "lint": "bunx eslint ./src",
    "lint:fix": "bunx eslint --fix ./src",
    "email": "email dev --dir src/emails --port 3001"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.0",
    "@neondatabase/serverless": "^1.0.1",
    "@react-email/components": "^0.5.3",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.11",
    "hono-pino": "^0.10.2",
    "hono-rate-limiter": "^0.4.2",
    "http-status-codes": "^2.3.0",
    "nodemailer": "^7.0.6",
    "pino": "^9.7.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "resend": "^6.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@react-email/preview-server": "4.2.11",
    "@types/bcrypt": "6.0.0",
    "@types/bun": "latest",
    "@types/nodemailer": "^7.0.1",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.28.0",
    "eslint-plugin-format": "^1.0.1",
    "husky": "^9.1.7",
    "pino-pretty": "^13.0.0",
    "react-email": "^4.2.11"
  }
}
