{
  "name": "smela-back",
  "scripts": {
    "prepare": "husky",
    "clean": "bun pm cache rm && rm -rf node_modules bun.lock",
    "reinstall": "bun clean && bun install",
    "dev": "bun --watch src/app.ts",
    "start": "NODE_ENV=production bun src/app.ts",
    "staging": "NODE_ENV=staging bun src/app.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "bun run src/data/seed.ts",
    "db:setup": "bun db:generate && bun db:migrate && bun db:seed",
    "db:ui": "drizzle-kit studio",
    "db:up:dev": "docker compose --env-file .env.development up -d",
    "db:down": "docker compose down",
    "db:down:dev": "docker compose --env-file .env.development down -v",
    "db:reset:dev": "bun run db:down:dev && bun run db:up:dev && bun run db:setup",
    "test": "NODE_ENV=test bun test",
    "coverage": "NODE_ENV=test bun test --coverage",
    "lint": "bunx eslint ./src",
    "lint:fix": "bunx eslint --fix ./src",
    "check": "bun lint && bun test",
    "email": "email dev --dir src/emails --port 3001",
    "docker:build": "docker build -t smela-back .",
    "docker:test": "docker run --rm -it smela-back"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.4",
    "@react-email/components": "^0.5.6",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "hono": "^4.9.12",
    "hono-pino": "^0.10.3",
    "hono-rate-limiter": "^0.4.2",
    "http-status-codes": "^2.3.0",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "pino": "^10.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "resend": "^6.1.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.0.0",
    "@react-email/preview-server": "4.3.0",
    "@types/bcrypt": "6.0.0",
    "@types/bun": "latest",
    "@types/nodemailer": "^7.0.2",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.37.0",
    "eslint-plugin-format": "^1.0.2",
    "husky": "^9.1.7",
    "pino-pretty": "^13.1.2",
    "react-email": "^4.3.0"
  }
}
